@page
@model CalculadoraIMC.Pages.IndexModel
@{
    ViewData["Title"] = "IMC";
}

<div class="text-center">
    <h1 class="display-4">Calculadora de IMC</h1>
    <form method="post">
        <div class="form-group">
            <label for="peso">Peso (kg):</label>
            <input type="number" class="form-control" id="peso" name="peso">
        </div>
       <div class="form-group">
            <label for="altura">Altura (m):</label>
            <input type="number" class="form-control" id="altura" name="altura" step="0.01">
        </div>


        <button type="submit" class="btn btn-primary">Calcular</button>
    </form>

    @if (Model != null)
    {
        <h2>Resultado</h2>
        <p>Tu IMC es: @Model.IMC</p>
        <p>Clasificación de peso: @Model.Clasificacion</p>
        <img src="@Model.Imagen" alt="Clasificación de peso" />
    }
</div>
