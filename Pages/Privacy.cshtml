@page
@model EcuacionPages.Pages.ExpresionModel
@{
    ViewData["Title"] = "Ecuación";
}
<h2>@ViewData["Title"]</h2>

<div class="container mt-5">
    <form method="post">
        <div class="form-group">
            <label for="A">Valor de a:</label>
            <input type="number" class="form-control" id="A" asp-for="A" required>
        </div>
        <div class="form-group">
            <label for="B">Valor de b:</label>
            <input type="number" class="form-control" id="B" asp-for="B" required>
        </div>
        <div class="form-group">
            <label for="X">Valor de x:</label>
            <input type="number" class="form-control" id="X" asp-for="X" required>
        </div>
        <div class="form-group">
            <label for="Y">Valor de y:</label>
            <input type="number" class="form-control" id="Y" asp-for="Y" required>
        </div>
        <div class="form-group">
            <label for="N">Valor de n (entero positivo):</label>
            <input type="number" class="form-control" id="N" asp-for="N" required>
        </div>
        <button type="submit" class="btn btn-primary">Calcular</button>
    </form>

    @if (Model.Result != null)
    {
        <div class="alert alert-success mt-3" role="alert">
            Resultado: @Model.Result
        </div>
    }
</div>
